<%= form_with model: @post do |post| %>
        <% if post.object.errors.any? %>
        <div>
            <h2> <%= pluralize(post.object.errors.count, "error") %>
            prohibited this post from being saved:</h2> 
            <ul>
                <% post.object.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
                </ul>
            </div>
        <% end %>
    <% if user_signed_in? %>   
    <%= post.text_area :body, placeholder: "scribe your secret message"%>
    <br>
    <%= post.submit "send message to wizard council"%>
    <% end %>

<% end %>